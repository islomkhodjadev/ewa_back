upstream backend_servers {
    # Backend instances on ports 8000-8015
    server 127.0.0.1:8000 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8001 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8002 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8003 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8004 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8005 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8006 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8007 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8008 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8009 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8010 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8011 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8012 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8013 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8014 max_fails=3 fail_timeout=30s;
    server 127.0.0.1:8015 max_fails=3 fail_timeout=30s;
    
    # Load balancing method
    least_conn;
    
    # Keepalive connections
    keepalive 100;
}

server {
    server_name admin-helper.ewaproduct.com;

    # increase if you upload large files
    client_max_body_size 1G;

    # Rate limiting
    limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;
    limit_req_zone $binary_remote_addr zone=static:10m rate=100r/s;

    location /static/ {
        alias /app/ewa_back/static/;
        access_log off;
        expires 30d;
        add_header Cache-Control "public, immutable";
        
        # Rate limiting for static files
        limit_req zone=static burst=200 nodelay;
    }

    location /media/ {
        alias /app/ewa_back/media/;
        access_log off;
        expires 30d;
        add_header Cache-Control "public";
        
        # Rate limiting for media
        limit_req zone=static burst=200 nodelay;
    }

    # Health check endpoint
    location /health/ {
        proxy_pass http://backend_servers;
        access_log off;
        proxy_intercept_errors on;
        error_page 502 503 504 =200 @health_down;
        
        # No rate limiting for health checks
        limit_req off;
    }
    
    location @health_down {
        return 200 "{\"status\": \"down\"}";
        add_header Content-Type application/json;
    }

    # WebSocket support for Daphne/ASGI
    location /ws/ {
        proxy_pass http://backend_servers;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # Timeouts for WebSocket
        proxy_read_timeout 86400;  # 24 hours for long-lived connections
        proxy_send_timeout 86400;
        proxy_connect_timeout 60;
        
        # Buffer settings for WebSocket
        proxy_buffering off;
        
        # No rate limiting for WebSocket
        limit_req off;
    }

    # API routes - more aggressive rate limiting
    location ~ ^/api/ {
        proxy_pass http://backend_servers;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # API rate limiting
        limit_req zone=api burst=20 nodelay;
        
        # Timeouts
        proxy_read_timeout 30;
        proxy_connect_timeout 30;
        proxy_send_timeout 30;
        
        # Error handling
        proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }

    # Regular HTTP requests
    location / {
        proxy_pass http://backend_servers;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # Load balancing settings
        proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
        
        # Timeouts
        proxy_read_timeout 60;
        proxy_connect_timeout 60;
        proxy_send_timeout 60;
        
        # Buffer settings
        proxy_buffers 8 16k;
        proxy_buffer_size 32k;
        
        # Keepalive optimizations
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        
        # Rate limiting for general requests
        limit_req zone=api burst=20 nodelay;
    }

    # Basic gzip
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/xml+rss
        application/atom+xml
        image/svg+xml;

   
}
